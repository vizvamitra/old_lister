<%= form_tag login_path, method: :post, id: 'login_form' do |f| %>
  <%= text_field_tag 'login', nil, placeholder: 'Логин', id: 'login' %>
  <%= text_field_tag 'password', nil, placeholder: 'Пароль', id: 'password' %>
  <%= submit_tag 'Вход', class: 'button button-narrow button-controls', id: 'log_in' %>
<% end %>